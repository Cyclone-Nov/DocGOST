<Window x:Class="GostDOC.Views.NewGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GostDOC.Views"
        mc:Ignorable="d"
        Title="Объединить в группу" Height="100" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <TextBlock Margin="5" Text="Имя новой группы:" VerticalAlignment="Center"/>
        <TextBox x:Name="GroupName" Margin="5" Grid.Column="1" Height="20" Text="Новая группа"></TextBox>

        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" LastChildFill="False">
            <Button Margin="5" DockPanel.Dock="Right" Content="Отмена" Width="100" IsCancel="True" />
            <Button Margin="5" DockPanel.Dock="Right" Content="Применить" Width="100" IsDefault="True" Click="OkButton_Click" />
        </DockPanel>

    </Grid>
</Window>
